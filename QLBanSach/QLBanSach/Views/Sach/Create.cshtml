@model QLBanSach.Models.TSach
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/TranTienSon_Layout.cshtml";
}
<div class="container" style="margin-top: 20px;">
    <h2>Thêm Sách Mới</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="MaSach" class="control-label">Mã Sách (*)</label>
                    <input asp-for="MaSach" class="form-control" placeholder="Ví dụ: S25" required />
                    <span asp-validation-for="MaSach" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TenSach" class="control-label">Tên Sách</label>
                    <input asp-for="TenSach" class="form-control" />
                    <span asp-validation-for="TenSach" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaTheLoai" class="control-label">Thể Loại</label>
                    <select asp-for="MaTheLoai" class="form-control" asp-items="ViewBag.MaTheLoai">
                        <option value="">-- Chọn thể loại --</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TacGia" class="control-label">Tác Giả</label>
                    <input asp-for="TacGia" class="form-control" />
                    <span asp-validation-for="TacGia" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DonGiaBan" class="control-label">Giá Bán (VNĐ)</label>
                    <input asp-for="DonGiaBan" class="form-control" />
                    <span asp-validation-for="DonGiaBan" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Ảnh Bìa</label>
                    <input type="file" name="fileAnh" class="form-control" accept="image/*" />
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Lưu Sách" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}